<header>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <a href="{{path('app_main')}}"><img class="img-fluid zxlogo" src="{{asset('/divers/images/grandLogoOrange.png')}}" alt="logo globetrek"></a>
                </div>
                <div class="col-md-6 d-flex justify-content-center">
                    <nav class="navbar navbar-expand-lg">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                            <div class="navbar-nav">
                                <a class="nav-link ps-5" aria-current="page" href="{{path('app_main')}}">Accueil</a>
                                <a class="nav-link ps-5" href="{{path('categories', {id:2})}}">Amérique</a>
                                <a class="nav-link ps-5" href="{{path('categories', {id:4})}}">Asie</a>
                                <a class="nav-link ps-5" href="{{path('categories', {id:5})}}">Europe</a>
                                <a class="nav-link ps-5" href="{{path('categories', {id:1})}}">Afrique</a>
                                <a class="nav-link ps-5" href="{{path('categories', {id:3})}}">Océanie</a>
                                <a class="nav-link ps-5" href="{{path('app_main')}}#contact">Contact</a>
                            </div>
                            </div>
                        </div>
                    </nav>
                </div>
                {% if app.user %}
                    {% if app.user.avatar is empty %}
                        <div class="col-md-3 d-flex justify-content-end align-items-center">
                            <i class="fa-solid fa-circle nav-link"></i>&emsp;<a href="" class="nav-link">{{app.user.pseudo}}</a>&emsp;<a class="nav-link" href="{{path('app_logout')}}"><i class="fa fa-power-off" aria-hidden="true"></i></a>
                        </div>
                    {% elseif app.user.opption is same as ('yes') %}
                        <div class="col-md-3 d-flex justify-content-end align-items-center">
                            <img src="{{asset('divers/avatars/' ~ app.user.avatar)}}" class="img-fluid roundedImage" alt="avatar utilisateur">&emsp;<a href="" data-bs-toggle="modal" data-bs-target="#userModal" class="nav-link">{{app.user.pseudo}}</a>&emsp;<a class="nav-link" href="{{path('app_logout')}}"><i class="fa fa-power-off" aria-hidden="true"></i></a>&emsp;<a href="{{path('admin')}}" class="nav-link"><i class="fa-solid fa-circle-play"></i></a>
                        </div>
                    {% else %}
                    <div class="col-md-3 d-flex justify-content-end align-items-center">
                        <img src="{{asset('divers/avatars/' ~ app.user.avatar)}}" class="img-fluid roundedImage" alt="avatar utilisateur">&emsp;<a href="" class="nav-link">{{app.user.pseudo}}</a>&emsp;<a class="nav-link" href="{{path('app_logout')}}"><i class="fa fa-power-off" aria-hidden="true"></i></a>&emsp;<a href="{{path('admin')}}" class="nav-link"><i class="fa-solid fa-circle-play"></i></a>
                    </div>
                    {% endif %}
                {% else %}
                <div class="col-md-3 d-flex justify-content-end align-items-center">
                    <a class="nav-link" href="{{path('app_login')}}">CONNEXION &emsp;<i class="fa-regular fa-circle-user"></i></a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- USER MODAL -->
    {% if app.user %}

        <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Informations compte utilisateur</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12 pb-1">NOM : {{app.user.lastname}}</div>
                    <div class="col-md-12 pb-1">Prénom : {{app.user.firstname}}</div>
                    <div class="col-md-12 pb-1">Pseudo : {{app.user.pseudo}}</div>
                    <div class="col-md-12 pb-1">Adresse email: {{app.user.email}}</div>
                    <div class="col-md-12 pb-1">Adresse : {{app.user.address}}</div>
                    <div class="col-md-12 pb-1">Code postale : {{app.user.zipcode}}</div>
                    <div class="col-md-12 pb-1">Ville : {{app.user.city}}</div>
                    <div class="col-md-12 pb-1">Pays : {{app.user.country}}</div>
                </div>
                <div class="modal-footer">
                    <a href="{{path('user.edit', {id:app.user.id})}}" class="btn btn-md btn-secondary">Modifier mes informations</a>
                </div>
                </div>
            </div>
        </div>
    {% endif %}
</header>